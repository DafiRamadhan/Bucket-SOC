<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <!-- <item name="android:alertDialogTheme">@style/AlertDialogTheme</item> -->
        <item name="android:datePickerDialogTheme">@style/CalendarDialog.Theme</item>
       <item name="android:timePickerDialogTheme">@style/TimeDialog.Theme</item>
    </style>

    <!-- Item selected font. -->
    <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">
     <item name="android:fontFamily">Nunito-Regular</item>
     <item name="android:textSize">16dp</item>
     <item name="android:textColor">#000000</item>
    </style>

    <!-- Dropdown options font. -->
    <style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
      <item name="android:fontFamily">Nunito-Regular</item>
      <item name="android:padding">8dp</item>
      <item name="android:textSize">16dp</item>
      <item name="android:textColor">#000000</item>
    </style>

    <!-- Alert font. -->
    <!-- <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
       <item name="android:fontFamily">Nunito-Regular</item>
       <item name="android:textSize">16dp</item>
       <item name="android:textColor">#000000</item>
       <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
       <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style> -->

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
       <item name="android:textColor">#F69D93</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
       <item name="android:textColor">#F69D93</item>
    </style>

    <style name="CalendarDialog.Theme" parent="Theme.AppCompat.Light.Dialog">
       <item name="colorAccent">#F69D93</item>
       <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="TimeDialog.Theme" parent="Theme.AppCompat.Light.Dialog">
       <item name="colorAccent">#F69D93</item>
       <item name="android:textColorPrimary">#000000</item>
    </style>
</resources>
